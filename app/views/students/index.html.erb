<p id="notice"><%= notice %></p>

<h1>Students</h1>

<% @groups.each do |group| %>
  <h4> <%=group.name%><h4>
  <table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Dotnum</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>
  <tbody>
    <% @students.select{|student| student.group_id == group.groupId}.each do |student| %>
        <%= student.fname %>
        <%= student.lname %>
        <%= student.dotNum %>
        <%= link_to 'Show', student %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br>
    <% end %>
  </tbody>
<%end%>


<br>

<%if @groups.length > 0%>
  <%= link_to 'New Student', new_student_path %>
<%else%>
  <h2> First, create at least one team. </h2>
<%end%>
<%= link_to 'New Group', new_group_path %>
